<div class="container">
	<h1>Listing jobs</h1>
	
	<table>
	  <tr>
	    <th>Name</th>
	    <th>Company ID</th>
	    <th>Description</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>
	
	<% @jobs.each do |job| %>
	  <tr>
	    <td><%= link_to job.name, job %></td>
	    <td><%= job.company_id %></td>
	    <td><%= job.description %></td>
	    <td><%= link_to 'Edit', edit_job_path(job) %></td>
	    <td><%= link_to 'Destroy', job, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>
	</table>
	
	<br />
	
	<%= link_to 'New Job', new_job_path %>
</div>
